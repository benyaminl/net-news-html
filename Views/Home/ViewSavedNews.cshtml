@model net_news_html.Library.ViewModel.SavedNewsViewModel

@{
    ViewData["Title"] = "Saved News";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="row mb-4">
    @if(!Model.loggedIn)
    {
    <div class="col-md-6">
        <h5>Don't have a password? technical Create a new password</h5>
        <form asp-action="CreateOrSaveWithPassKey" asp-controller="UserNews" method="post" class="form-inline">
            <div class="input-group">
                <input type="password" name="passcode" class="form-control" placeholder="Enter passcode to save news" required />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-success">Save with New Passcode</button>
                </div>
            </div>
        </form>
    </div>
    
    <div class="col-md-6">
        <h5>Has passcode? Just load from server and merge with your data localhost data!</h5>
        <form asp-action="LoadWithPassKey" asp-controller="UserNews" method="post" class="form-inline">
            <div class="input-group">
                <input type="password" name="passcode" class="form-control" placeholder="Enter passcode to load news" required />
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Load with Passcode</button>
                </div>
            </div>
        </form>
    </div>
    }
    else 
    {
        <div class="col-md-6">
            <h5>Hi there!</h5>
            <form asp-action="LogOut" asp-controller="UserNews" method="post" class="form-inline">
                <div class="input-group">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Log Out</button>
                    </div>
                </div>
            </form>
        </div>
    }
</div>

@if (Model.listSavedNews.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date Saved</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.listSavedNews.Count; i++)
            {
                var item = Model.listSavedNews[i];
                <tr>
                    <td><a href="@item.ProxyUrl" target="_blank">@item.Title</a></td>
                    <td>@item.SaveDate.ToString("g")</td>
                    <td>
                        <form asp-action="RemoveSaved" method="get">
                            <input type="hidden" name="url" value="@item.Url" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No saved news items.</p>
}

<a asp-action="Index" class="btn btn-primary">Back to Home</a>